		"rei_plugins": [
			"com.halotroop.sims.client.rei.REIPlugin"
		],
		"client": [
			"com.halotroop.sims.client.SimsClient"
		],
		"main": [
			"com.halotroop.sims.SimsMain"
		]
	},
	"mixins": [
		"sims.mixins.json"
	],
	"depends": {
